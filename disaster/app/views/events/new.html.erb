<%= form_for @event, :url => events_path do |f| %>
    <%= f.label :category, "分類" %>
    <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] } %>

    <%= f.label :title, "標題" %>
    <%= f.text_field :title %>

    <%= f.label :description, "內文" %>
    <%= f.text_area :description %>

    <%= f.submit "create" %>
<% end %>